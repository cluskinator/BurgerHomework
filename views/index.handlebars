<h1>Welcome to Eat-Da-Burger!</h1>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Has this burger when </label><br>
      
    <input type="radio" name="devoured" value="0" checked>Needs to be Devoured!
    <br>
    <input type="radio" name="devoured" value="1">Add Burger Victim
  </div>

  <button type="submit">Add Burger</button>
</form>

<h1>Menu</h1>

<h2>Burgers pending devouring...</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{id}}. {{burger_name}}
        <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
          {{#if devoured}}this burger has been eaten!{{else}}eat me!{{/if}}
        </button></span>
      </p>
    {{/unless}}
  {{/each}}
</ul>

<h2>Victims</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{id}}. {{burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>


